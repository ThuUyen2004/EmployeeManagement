@* @model Service.CRUD_Product.AccountModel.SignInRequest
@{
    ViewBag.Title = "Đăng nhập hệ thống";
}
 *@
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card mt-4">
            <div class="card-body p-4">
                <div class="text-center mt-2">
                    <h5 class="text-primary">Chào mừng trở lại!</h5>
                    <p class="text-muted">Vui lòng đăng nhập để tiếp tục.</p>
                </div>

                <div class="p-2 mt-4">
                    <!-- Form đăng nhập -->
                    <form asp-action="SignIn" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label @* asp-for="Username" *@ class="form-label">Tên đăng nhập</label>
                            <input@*  asp-for="Username" *@ class="form-control" name="Username" placeholder="Nhập tên đăng nhập" />
                            <span @* asp-validation-for="Username" *@ class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="float-end">
                                <a href="#" class="text-muted">Quên mật khẩu?</a>
                            </div>
                            <label@*  asp-for="Password" *@ class="form-label">Mật khẩu</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                                <input @* asp-for="Password" *@ type="password" class="form-control pe-5 password-input" name="Password" placeholder="Nhập mật khẩu" />
                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon">
                                    <i class="ri-eye-fill align-middle"></i>
                                </button>
                            </div>
                            <span @* asp-validation-for="Password" *@ class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input @* asp-for="Remember" *@ class="form-check-input" type="checkbox" id="auth-remember-check" />
                            <label class="form-check-label" for="auth-remember-check">Ghi nhớ đăng nhập</label>
                        </div>

                        <!-- Thông báo -->
                        <div class="mt-3 alert-box">
                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>Lỗi:</strong> @* @ViewBag.Error *@
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            else if (ViewBag.Success != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong>Thành công:</strong>@*  @ViewBag.Success *@
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                        </div>

                        <!-- Nút đăng nhập -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100 mb-2">
                                <i class="ri-login-box-line"></i> Đăng nhập
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <p class="mb-0">
                Chưa có tài khoản?
                <a href="#" class="fw-semibold text-primary text-decoration-underline">Đăng ký ngay</a>
            </p>
        </div>
    </div>
</div>
