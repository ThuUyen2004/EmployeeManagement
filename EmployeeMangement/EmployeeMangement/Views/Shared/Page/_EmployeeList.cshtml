<div class="container-fluid mt-4 px-4">
   

    <!-- Bộ lọc -->
    <div class="card filter-card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span > Danh sách nhân viên</span>
            <button class="btn btn-success " id="btnAdd">
                Thêm nhân viên
            </button>
        </div>
        <div class="card-body p-4">
            <div class="row g-3 align-items-end">
                <div class="col-lg-4 col-md-6">
                    <label class="form-label fw-semibold">Tìm kiếm</label>
                    <div class="position-relative">
                        <i class="ri-search-line position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input type="search" id="keyword" class="form-control ps-5" placeholder="Tên, email, phone...">
                    </div>
                </div>

                <div class="col-lg-2 col-md-6">
                    <label class="form-label fw-semibold">Trạng thái</label>
                    <select class="form-select" id="statusFilter">
                        <option value="">Tất cả</option>
                        <option value="Active">Kích hoạt</option>
                        <option value="Inactive">Tạm khóa</option>
                    </select>
                </div>

                <div class="col-lg-2 col-md-6">
                    <label class="form-label fw-semibold">Chức vụ</label>
                    <select class="form-select" id="positionFilter"><option value="">Tất cả</option></select>
                </div>

                <div class="col-lg-2 col-md-6">
                    <label class="form-label fw-semibold">Phòng ban</label>
                    <select class="form-select" id="departmentFilter"><option value="">Tất cả</option></select>
                </div>

                <div class="col-lg-2 col-md-6">
                    <label class="form-label fw-semibold">Vị trí công tác</label>
                    <select class="form-select" id="workPositionFilter"><option value="">Tất cả</option></select>
                </div>
            </div>

            <!-- Row 2: date range + actions -->
            <div class="row g-3 align-items-center mt-2">
                <div class="col-lg-4 col-md-6">
                    <label class="form-label fw-semibold">Ngày tạo</label>
                    <div class="d-flex align-items-center gap-2">
                        <input type="date" id="createDateFrom" class="form-control form-control-sm">
                        <span>-</span>
                        <input type="date" id="createDateTo" class="form-control form-control-sm">
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 ms-auto text-end">
                    <button type="button" class="btn btn-outline-secondary" id="clearFilter">Xóa bộ lọc</button>
                </div>
            </div>

        </div>
    </div>

    <!-- Danh sách nhân viên -->
    <div class="card list-card">
        <div class="card-header pb-4">
            <div class="row align-items-center">
                <div class="col-auto"><input type="checkbox" class="form-check-input"></div>
                <div class="col-1">ID</div>
                <div class="col-2">Avatar</div>
                <div class="col-2">Thông tin nhân viên</div>
                <div class="col-1 text-center">Chức vụ</div>
                <div class="col-2 text-center">Phòng ban</div>
                <div class="col-2 text-center">Vị trí công tác</div>
                <div class="col-1 text-center">Hành động</div>
            </div>
        </div>

        <div class="list-group list-group-flush" id="employeeList">

            <!-- Nhân viên 1 -->
            <div class="list-group-item employee-item">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <input type="checkbox" class="form-check-input">
                    </div>
                    <div class="col-1">
                        <span class="fw-bold text-primary">01</span>
                    </div>
                    <div class="col-2">
                        <img src="https://ui-avatars.com/api/?name=Nguyen+Van+A&background=4361ee&color=fff&size=60&bold=true"
                             alt="Avatar" class="avatar">
                    </div>
                    <div class="col-2">
                        <div>
                          
                            <div class="employee-name">Nguyễn Văn A</div>
                          
                            <div class="info-text">
                                <i class="ri-mail-line text-primary"></i> a@example.com
                            </div>
                          
                          
                            <div class="d-flex align-items-center gap-2 mt-2 flex-wrap">
                             
                                <i class="ri-phone-line text-success"></i> 0123456789
                                <span class="badge bg-success status-badge">Kích hoạt</span>
                           
                              
                              
                            </div>
                            <div class="d-flex align-items-center  mt-2 flex-wrap">

                                <span class="badge bg-light text-dark border ">Ngày tạo:</span>
                                <span class="text-muted fw-medium">20/20/2022</span>
                               
                                <span class="badge bg-light text-dark border  mt-1">Keyword: </span>
                                <span class="text-muted fw-medium">Dev, hhhhhhhhh</span>


                            </div>
                        </div>
                    </div>
                    <div class="col-1 text-center">
                        <div class="fw-medium text-dark">Developer</div>
                    </div>
                    <div class="col-2 text-center">
                        <div class="fw-medium text-dark">PB201</div>
                    </div>
                    <div class="col-2 text-center">
                        <div class="fw-medium text-dark">PB201</div>
                    </div>
                    <div class="col-1 text-center">
                        <div class="dropup dropdown-action">
                            <a href="#" class="btn btn-soft-primary btn-sm dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="ri-more-2-fill"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a href="#" class="dropdown-item view-item-btn text-primary">
                                        <i class="ri-eye-fill fs-16"></i> Xem chi tiết
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item edit-item-btn text-warning">
                                        <i class="ri-edit-fill fs-16"></i> Chỉnh sửa
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="dropdown-item remove-item-btn text-danger">
                                        <i class="ri-delete-bin-5-fill fs-16"></i> Xóa bỏ
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Không có dữ liệu -->
    <div class="text-center no-data d-none" id="noData">
        <i class="ri-inbox-line" style="font-size: 3rem; color: #cbd5e1;"></i>
        <p class="mt-3 fw-medium">Không có dữ liệu phù hợp</p>
    </div>
</div>